<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:textColor="@color/colorPrimary"
        android:gravity="center"
        android:text="新 建 兴 趣 项 目"
        android:padding="15dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorPrimary"
            android:text="项目名称"
            android:layout_marginLeft="15dp"
            android:textSize="16sp"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="20dp"/>

        <com.example.a29149.ecollaboration.widget.MyEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/text_color"
            android:background="@drawable/edittext_style_focused"
            android:textSize="16sp"
            android:id="@+id/project_name_edit"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="10dp"
            android:gravity="left"
            android:layout_marginLeft="10dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorPrimary"
            android:text="项目要求"
            android:layout_marginLeft="15dp"
            android:textSize="16sp"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"/>
        <com.example.a29149.ecollaboration.widget.MyEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:id="@+id/project_need_edit"
            android:textColor="@color/text_color"
            android:background="@drawable/edittext_style_focused"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:gravity="left"
            android:layout_marginLeft="10dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorPrimary"
            android:text="所获技能"
            android:layout_marginLeft="15dp"
            android:textSize="16sp"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"/>
        <com.example.a29149.ecollaboration.widget.MyEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/text_color"
            android:background="@drawable/edittext_style_focused"
            android:textSize="16sp"
            android:id="@+id/project_learn_skill_edit"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:gravity="left"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorPrimary"
            android:text="项目描述"
            android:layout_marginLeft="15dp"
            android:textSize="16sp"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="10dp"/>
        <com.example.a29149.ecollaboration.widget.MyEditText
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:textColor="@color/text_color"
            android:background="@drawable/edittext_style_focused"
            android:textSize="16sp"
            android:maxLines="8"
            android:inputType="textMultiLine"
            android:id="@+id/project_content_edit"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="10dp"
            android:gravity="left"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"/>
    </LinearLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="1.0px"
        android:background="#DEDEDE" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:background="#FFFFFF"
        android:gravity="center"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/info_fragment2_new_msg_bt_giveup"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@null"
            android:gravity="center"
            android:textSize="15sp"
            android:text="取     消" />

        <View
            android:layout_width="1.0px"
            android:layout_height="match_parent"
            android:background="#DEDEDE" />

        <Button
            android:id="@+id/info_fragment2_new_msg_bt_commit"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@null"
            android:gravity="center"
            android:textSize="15sp"
            android:text="新     建" />
    </LinearLayout>

</LinearLayout>
