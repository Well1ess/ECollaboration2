<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:paddingTop="10dp"
    android:paddingBottom="10dp"
    android:background="@color/background"
    android:descendantFocusability="blocksDescendants">

    <TextView
        android:id="@+id/msg_creator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="20dp"
        android:text="青葱岁月"
        android:textColor="@color/grey"
        android:textSize="13sp" />

    <TextView
        android:id="@+id/msg_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/msg_creator"
        android:layout_toRightOf="@id/msg_creator"
        android:layout_marginLeft="20dp"
        android:text="青葱岁月"
        android:textColor="@color/grey"
        android:textSize="13sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/msg_creator"
        android:id="@+id/msg_content"
        android:textColor="@color/black"
        android:padding="10dp"
        android:textSize="14dp"
        android:textStyle="bold"
        android:layout_marginRight="50dp"
        android:background="@drawable/textview_message"
        android:layout_alignLeft="@id/msg_creator"/>

    <CheckBox
        android:id="@+id/selected"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="0dp"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:padding="8dp" />

</RelativeLayout>