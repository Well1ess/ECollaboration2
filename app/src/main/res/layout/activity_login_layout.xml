<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/colorPrimary">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/bg_4" />

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <TextView
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:scaleY="0.9"
            android:scaleX="0.9"
            android:gravity="center"
            android:elevation="5dp"
            android:background="@drawable/textview_logo_bg"
            android:layout_marginTop="20dp"
            android:layout_centerHorizontal="true"/>
        <TextView
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:gravity="center"
            android:scaleY="0.8"
            android:scaleX="0.8"
            android:elevation="5dp"
            android:background="@drawable/textview_logo_style"
            android:layout_marginTop="20dp"
            android:textSize="150dp"
            android:text="E"
            android:textColor="@color/colorPrimary"
            android:layout_centerHorizontal="true" >

        </TextView>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="230dp"
        android:layout_marginBottom="230dp"
        android:layout_gravity="center"
        android:padding="5dp"
        android:elevation="5dp"
        android:background="@drawable/textview_login_normal"
        android:id="@+id/loginbg"
        android:focusable="true"
        android:focusableInTouchMode="true"
        >
        <com.example.a29149.ecollaboration.widget.MyEditText
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/edittext_selector"
            android:drawableLeft="@drawable/user"
            android:drawableRight="@drawable/clear_normal_list"
            android:drawableTint="@color/black"
            android:ems="20"
            android:hint="Please Enter Account"
            android:paddingBottom="6dip"
            android:paddingLeft="6dip"
            android:paddingRight="6dip"
            android:paddingTop="6dip"
            android:layout_alignParentTop="true"
            android:layout_marginTop="20dp"
            android:elevation="5dp"
            android:id="@+id/edittext_account"
            android:textCursorDrawable="@null"
            />

        <com.example.a29149.ecollaboration.widget.MyEditText
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/edittext_selector"
            android:drawableLeft="@drawable/password"
            android:drawableRight="@drawable/clear_normal_list"
            android:drawableTint="@color/black"
            android:ems="20"
            android:hint="Please Enter Password"
            android:paddingBottom="6dip"
            android:paddingLeft="6dip"
            android:paddingRight="6dip"
            android:paddingTop="6dip"
            android:inputType="textPassword"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="20dp"
            android:elevation="5dp"
            android:id="@+id/edittext_psd"
            android:textCursorDrawable="@null"
            />


    </RelativeLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:text=">>Forgot your password?"
            android:textColor="@color/white"
            android:textSize="15dp"
            android:layout_marginStart="30dp"
            android:layout_marginBottom="80dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:elevation="3dp"/>

        <CheckBox
            android:id="@+id/rememberpsd"
            style="@style/Widget.AppCompat.CompoundButton.CheckBox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="110dp"
            android:layout_marginStart="26dp"
            android:elevation="3dp"
            android:text="Remember me"
            android:textColor="@color/white"
            android:textSize="15dp" />

        <TextView
            android:clickable="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/button_login_style"
            android:text="LOGIN"
            android:textSize="20sp"
            android:textColor="@color/colorPrimary"
            android:elevation="5dip"
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:id="@+id/button_login"

            android:layout_marginEnd="26dp"
            android:layout_alignTop="@+id/rememberpsd"
            android:layout_alignParentEnd="true" />

    </RelativeLayout>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/login_mask"
        android:orientation="vertical"
        android:background="#BBDEDEDE"
        android:clickable="true"
        android:visibility="gone"
        android:elevation="10dp">

    </LinearLayout>

</FrameLayout>