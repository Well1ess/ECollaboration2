<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/transparent">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:elevation="5dp"
        android:layout_marginBottom="5dp"
        android:background="@color/colorPrimary">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="20dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:background="@drawable/button_menu_colorprimary_stroke_transparent">

                <TextView
                    android:id="@+id/bt_return"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="取消"
                    android:clickable="true"
                    android:textSize="15sp"
                    android:textColor="@color/white"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:background="?android:attr/selectableItemBackground" />
            </LinearLayout>



            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:textColor="@color/white"
                android:id="@+id/title"
                android:layout_centerInParent="true"
                android:text="新建工程实践项目"
                android:gravity="center"
                android:textStyle="bold"
                android:textSize="15sp"
                android:drawablePadding="5dp"
                android:drawableRight="@android:drawable/arrow_down_float" />/>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@drawable/button_menu_white_stroke_white">

                <TextView
                    android:id="@+id/commit"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="保存"
                    android:textSize="15sp"
                    android:textColor="@color/colorPrimary"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:clickable="true"
                    android:background="?android:attr/selectableItemBackground" />

            </LinearLayout>

        </RelativeLayout>
    </android.support.design.widget.AppBarLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="65dp"
        android:orientation="vertical">

        <FrameLayout
            android:background="@color/white"
            android:id="@+id/project_container"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" >

            <LinearLayout
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:background="@color/background">

                <ScrollView
                    android:scrollbars="none"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="16sp"
                            android:padding="16dp"
                            android:text="项目信息"/>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@color/white"
                            android:orientation="horizontal">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/colorPrimary"
                                android:text="项目名称"
                                android:layout_marginLeft="15dp"
                                android:textSize="15sp"
                                android:layout_marginBottom="10dp"
                                android:layout_marginTop="10dp"/>
                            <EditText
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textColor="@color/text_color"
                                android:background="@drawable/edittext_style_focused_1do"
                                android:textSize="15sp"
                                android:text=""
                                android:id="@+id/project_name_edit"
                                android:layout_marginBottom="10dp"
                                android:layout_marginTop="10dp"
                                android:layout_marginRight="15dp"
                                android:gravity="left"
                                android:layout_marginLeft="10dp"/>
                        </LinearLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="2px"
                            android:layout_marginRight="20dp"
                            android:layout_marginLeft="20dp"
                            android:background="@color/divider"/>

                        <LinearLayout
                            android:background="@color/white"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/colorPrimary"
                                android:text="项目要求"
                                android:layout_marginLeft="15dp"
                                android:textSize="15sp"
                                android:layout_marginBottom="10dp"
                                android:layout_marginTop="10dp"/>
                            <EditText
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textSize="15sp"
                                android:text=""
                                android:id="@+id/project_need_edit"
                                android:textColor="@color/text_color"
                                android:background="@drawable/edittext_style_focused_1do"
                                android:layout_marginBottom="10dp"
                                android:layout_marginTop="10dp"
                                android:layout_marginRight="10dp"
                                android:gravity="left"
                                android:layout_marginLeft="10dp"/>
                        </LinearLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="2px"
                            android:layout_marginRight="20dp"
                            android:layout_marginLeft="20dp"
                            android:background="@color/divider"/>

                        <LinearLayout
                            android:background="@color/white"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/colorPrimary"
                                android:text="项目描述"
                                android:layout_marginLeft="15dp"
                                android:textSize="15sp"
                                android:layout_marginBottom="10dp"
                                android:layout_marginTop="10dp"/>
                            <EditText
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textColor="@color/text_color"
                                android:background="@drawable/edittext_style_focused_1do"
                                android:textSize="15sp"
                                android:maxLines="8"
                                android:text=""
                                android:inputType="textMultiLine"
                                android:id="@+id/project_content_edit"
                                android:layout_marginBottom="10dp"
                                android:layout_marginTop="10dp"
                                android:gravity="left"
                                android:layout_marginLeft="10dp"
                                android:layout_marginRight="10dp"/>
                        </LinearLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="2px"
                            android:layout_marginRight="20dp"
                            android:layout_marginLeft="20dp"
                            android:background="@color/divider"/>

                        <LinearLayout
                            android:background="@color/white"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/colorPrimary"
                                android:text="所获技能"
                                android:layout_marginLeft="15dp"
                                android:textSize="15sp"
                                android:layout_marginBottom="10dp"
                                android:layout_marginTop="10dp"/>
                            <EditText
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textColor="@color/text_color"
                                android:background="@drawable/edittext_style_focused_1do"
                                android:textSize="15sp"
                                android:text=""
                                android:id="@+id/project_learn_skill_edit"
                                android:layout_marginBottom="10dp"
                                android:layout_marginTop="10dp"
                                android:gravity="left"
                                android:layout_marginRight="10dp"
                                android:layout_marginLeft="10dp"/>
                        </LinearLayout>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="16sp"
                            android:padding="16dp"
                            android:text="时间要求"/>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:background="@color/white">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/colorPrimary"
                                android:text="申请截止"
                                android:layout_marginLeft="15dp"
                                android:textSize="15sp"
                                android:layout_marginBottom="10dp"
                                android:layout_marginTop="10dp"/>
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textColor="@color/text_color"
                                android:background="@drawable/edittext_style_focused_1do"
                                android:textSize="15sp"
                                android:hint="申请项目截止时间"
                                android:id="@+id/project_applyBeforeDate_edit"
                                android:layout_marginBottom="10dp"
                                android:layout_marginTop="10dp"
                                android:layout_marginRight="15dp"
                                android:gravity="left"
                                android:layout_marginLeft="10dp"/>
                        </LinearLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="2px"
                            android:layout_marginRight="20dp"
                            android:layout_marginLeft="20dp"
                            android:background="@color/divider"/>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:background="@color/white">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/colorPrimary"
                                android:text="项目截止"
                                android:layout_marginLeft="15dp"
                                android:textSize="15sp"
                                android:layout_marginBottom="10dp"
                                android:layout_marginTop="10dp"/>
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textColor="@color/text_color"
                                android:background="@drawable/edittext_style_focused_1do"
                                android:textSize="15sp"
                                android:hint="项目截止时间"
                                android:id="@+id/project_finishDate_edit"
                                android:layout_marginBottom="10dp"
                                android:layout_marginTop="10dp"
                                android:layout_marginRight="15dp"
                                android:gravity="left"
                                android:layout_marginLeft="10dp"/>
                        </LinearLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="2px"
                            android:layout_marginRight="20dp"
                            android:layout_marginLeft="20dp"
                            android:background="@color/divider"/>

                        <LinearLayout
                            android:background="@color/white"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/colorPrimary"
                                android:text="存活时间"
                                android:layout_marginLeft="15dp"
                                android:textSize="15sp"
                                android:layout_marginBottom="10dp"
                                android:layout_marginTop="10dp"/>
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textColor="@color/text_color"
                                android:background="@drawable/edittext_style_focused_1do"
                                android:textSize="15sp"
                                android:hint="项目有效期"
                                android:id="@+id/project_survivalDate_edit"
                                android:layout_marginBottom="10dp"
                                android:layout_marginTop="10dp"
                                android:layout_marginRight="10dp"
                                android:gravity="left"
                                android:layout_marginLeft="10dp"/>
                        </LinearLayout>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="16sp"
                            android:padding="16dp"
                            android:text="团队相关"/>

                        <LinearLayout
                            android:background="@color/white"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/colorPrimary"
                                android:text="团队数量"
                                android:layout_marginLeft="15dp"
                                android:textSize="15sp"
                                android:layout_marginBottom="10dp"
                                android:layout_marginTop="10dp"/>
                            <EditText
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textColor="@color/text_color"
                                android:background="@drawable/edittext_style_focused_1do"
                                android:textSize="15sp"
                                android:text=""
                                android:inputType="number"
                                android:id="@+id/project_teamMax_edit"
                                android:layout_marginBottom="10dp"
                                android:layout_marginTop="10dp"
                                android:layout_marginRight="10dp"
                                android:gravity="left"
                                android:layout_marginLeft="10dp"/>
                        </LinearLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="2px"
                            android:layout_marginRight="20dp"
                            android:layout_marginLeft="20dp"
                            android:background="@color/divider"/>

                        <LinearLayout
                            android:background="@color/white"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/colorPrimary"
                                android:text="团队人员"
                                android:layout_marginLeft="15dp"
                                android:textSize="15sp"
                                android:layout_marginBottom="10dp"
                                android:layout_marginTop="10dp"/>
                            <EditText
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textColor="@color/text_color"
                                android:background="@drawable/edittext_style_focused_1do"
                                android:textSize="15sp"
                                android:text=""
                                android:inputType="number"
                                android:id="@+id/project_memberMax_edit"
                                android:layout_marginBottom="10dp"
                                android:layout_marginTop="10dp"
                                android:layout_marginRight="10dp"
                                android:gravity="left"
                                android:layout_marginLeft="10dp"/>
                        </LinearLayout>


                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="16sp"
                            android:padding="16dp"
                            android:text="其它"/>

                        <LinearLayout
                            android:background="@color/white"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/colorPrimary"
                                android:text="关键字    "
                                android:layout_marginLeft="15dp"
                                android:textSize="15sp"
                                android:layout_marginBottom="10dp"
                                android:layout_marginTop="10dp"/>
                            <EditText
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textColor="@color/text_color"
                                android:background="@drawable/edittext_style_focused_1do"
                                android:textSize="15sp"
                                android:text=""
                                android:id="@+id/project_keyWord_edit"
                                android:layout_marginBottom="10dp"
                                android:layout_marginTop="10dp"
                                android:layout_marginRight="10dp"
                                android:gravity="left"
                                android:layout_marginLeft="10dp"/>
                        </LinearLayout>

                    </LinearLayout>
                </ScrollView>
            </LinearLayout>

        </FrameLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:orientation="horizontal"
            android:background="@color/transparent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_marginRight="5dp"
                android:layout_marginLeft="5dp"
                android:background="@drawable/stroke_colorprimary_1px_21dp_solid_colorprimary">
                <TextView
                    android:layout_weight="0"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="修改项目"
                    android:textColor="@color/white"
                    android:gravity="center"
                    android:textSize="15sp"
                    android:padding="11dp"
                    android:clickable="true"
                    android:background="?android:attr/selectableItemBackground"
                    android:id="@+id/insert_project_button"/>
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

</android.support.design.widget.CoordinatorLayout>

